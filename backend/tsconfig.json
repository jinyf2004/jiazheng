{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@utils/*": ["utils/*"]
    },
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "target": "ES2015",
    "outDir": "./dist",
    "rootDirs": ["src"],
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "src/types/**/*",
    "patcher.js",
    "../types.d.ts"
  ]
}